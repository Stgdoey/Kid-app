
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QuestBox Profiles Schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": { "type": "string" },
      "name": { "type": "string" },
      "pin": { "type": "string", "pattern": "^[0-9]{4}$" }
    },
    "required": ["id", "name", "pin"]
  }
}
