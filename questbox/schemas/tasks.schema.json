
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QuestBox Tasks Schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": { "type": "string" },
      "name": { "type": "string" },
      "description": { "type": "string" },
      "xp": { "type": "integer", "minimum": 0 },
      "repeatable": { "type": "string", "enum": ["daily", "weekly", "none"] },
      "difficulty": { "type": "string", "enum": ["easy", "medium", "hard"] },
      "timer": { "type": "integer", "minimum": 0, "description": "Duration in minutes for timed quests." },
      "xpPenaltyFactor": { "type": "number", "minimum": 0, "maximum": 1, "description": "Multiplier for XP if timer runs out (e.g., 0.5 for 50% penalty)." }
    },
    "required": ["id", "name", "description", "xp", "repeatable"]
  }
}