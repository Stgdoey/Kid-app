
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QuestBox Tasks Schema",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "id": { "type": "string" },
      "name": { "type": "string" },
      "description": { "type": "string" },
      "xp": { "type": "integer", "minimum": 0 },
      "repeatable": { "type": "string", "enum": ["daily", "weekly", "none"] }
    },
    "required": ["id", "name", "description", "xp", "repeatable"]
  }
}
