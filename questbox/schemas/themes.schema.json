
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QuestBox Themes Schema",
  "type": "object",
  "patternProperties": {
    "^[a-zA-Z0-9_]+$": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "styles": {
          "type": "object",
          "properties": {
            "bg": { "type": "string" },
            "primary": { "type": "string" },
            "secondary": { "type": "string" },
            "accent": { "type": "string" },
            "text": { "type": "string" }
          },
          "required": ["bg", "primary", "secondary", "accent", "text"]
        }
      },
      "required": ["name", "styles"]
    }
  }
}
